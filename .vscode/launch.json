{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Auth Service",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}/packages/auth",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/packages/auth/node_modules/jest/bin/jest.js",
        "--runInBand",
        "--watchAll",
        "--no-cache"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 19229
    },

